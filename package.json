{
  "name": "toolwrights.com",
  "private": true,
  "type": "module",
  "dependencies": {
    "busboy": "^0.3.1",
    "commonform-commonmark": "^6.0.0",
    "commonform-docx": "^5.4.0",
    "commonform-prepare-blanks": "^1.0.2",
    "cookie": "^0.4.1",
    "creditstxt": "^1.0.2",
    "do-not-cache": "^1.0.1",
    "escape-html": "^1.0.3",
    "form-data": "^3.0.0",
    "gravatar": "^1.8.1",
    "gray-matter": "^4.0.2",
    "http-hash": "^2.0.1",
    "iso-3166-2": "^1.0.0",
    "json-parse-errback": "^2.0.1",
    "lock": "^1.1.0",
    "nodemailer": "^6.4.17",
    "outline-numbering": "^2.0.0",
    "pino": "^6.11.0",
    "pino-http": "^5.5.0",
    "pino-papertrail": "^2.1.0",
    "pump": "^3.0.0",
    "remarkable": "^2.0.1",
    "run-auto": "^2.0.4",
    "run-parallel": "^1.1.10",
    "run-parallel-limit": "^1.0.6",
    "run-series": "^1.1.9",
    "secure-password": "^4.0.0",
    "semver": "^7.3.4",
    "send": "^0.17.1",
    "simple-concat-limit": "^2.0.3",
    "split2": "^3.2.2",
    "stripe": "^8.134.0",
    "through2": "^4.0.2",
    "url-parse": "^1.4.7",
    "url-regex": "^5.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "depcheck": "^1.3.1",
    "licensee": "^8.1.0",
    "markdown-spellcheck": "^1.3.1",
    "nyc": "^15.1.0",
    "parse5": "^6.0.1",
    "playwright": "^1.8.0",
    "rimraf": "^3.0.2",
    "simple-concat": "^1.0.1",
    "sodium-native": "^3.2.1",
    "standard": "^16.0.3",
    "tap": "^14.11.0"
  },
  "tap": {
    "no-esm": true,
    "no-timeout": true,
    "reporter": "tap",
    "jobs": 1
  },
  "scripts": {
    "audit": "npm audit --production | tee audit.log",
    "prestart": "if test \"$NODE_ENV\" = \"production\"; then npm run credits ; fi",
    "start": "./start",
    "credits": "cp credits.txt.header credits.txt ; creditstxt >> credits.txt",
    "check": "npm run lint && npm run spelling && npm run gotchas",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test",
    "deps": "depcheck --ignore pino-papertrail",
    "fix": "standard --fix",
    "gotchas": "! git grep tape.only test && ! git grep console.log test && ! git grep console.error test && ! git grep saveScreenshot test",
    "licenses": "licensee --errors-only",
    "lint": "standard",
    "spelling": "mdspell --ignore-numbers --en-us -r $(git ls-files | grep '.md$')",
    "test": "NODE_ENV=test tap test/**.test.js",
    "test:unit": "NODE_ENV=test tap test/unit/*.test.js",
    "test:integration": "NODE_ENV=test tap test/integration/*.test.js"
  }
}
